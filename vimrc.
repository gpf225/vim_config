"python setting
map <F6> :call PRUN()<CR>
func! PRUN()
		exec "w"
		if &filetype == 'sh'
			:!time bash %
		elseif &filetype =='python'
			exec "!clear"
			exec "!time python3 %"
		endif
endfunc
